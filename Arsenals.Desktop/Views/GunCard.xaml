<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arsenals.Desktop.Views.GunCard">

    <Frame CornerRadius="10"
           HasShadow="True"
           BorderColor="Gray"
           BackgroundColor="White"
           Padding="15"
           Margin="0,10,0,10">
        <VerticalStackLayout>
            <Image x:Name="CardImage"
                   HeightRequest="200"
                   Aspect="AspectFill"/>
            <Label x:Name="CardTitle"
                   FontAttributes="Bold"
                   FontSize="20"
                   Margin="0,10,0,5"/>
            <Label x:Name="CardDescription"
                   FontSize="14"
                   TextColor="Gray"/>
        </VerticalStackLayout>
    </Frame>

</ContentView>
